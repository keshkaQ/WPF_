<Window
    x:Class="Homework_3._1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Homework_3._1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid Background="Transparent" MouseDown="StackPanel_MouseDown">
            <StackPanel>
                <DataGrid CanUserAddRows="False" CanUserDeleteRows="False"
                    x:Name="dataGridStudents"
                    Margin="10"
                    AutoGenerateColumns="False"
                    SelectionChanged="dataGridStudents_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Surname}"
                            Header="Фамилия" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Name}"
                            Header="Имя" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Age}"
                            Header="Возраст" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Specialization}"
                            Header="Специальность" />
                    </DataGrid.Columns>

                </DataGrid>
                <StackPanel Margin="5">
                    <TextBlock Text="Имя:" />
                    <TextBox Name="nameTextBox" />

                    <TextBlock Text="Фамилия:" />
                    <TextBox Name="surnameTextBox" />

                    <TextBlock Text="Возраст:" />
                    <TextBox Name="ageTextBox" />

                    <TextBlock Text="Специальность:" />
                    <TextBox Name="specializationTextBox" />
                    <StackPanel
                        Margin="0,20,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            Name="addButton"
                            Width="140"
                            Height="30"
                            Click="AddStudent"
                            Content="Добавить" />
                        <Button
                            Name="editButton"
                            Width="140"
                            Height="30"
                            Margin="10,0,0,0"
                            Click="EditStudent"
                            Content="Редактировать" />
                        <Button
                            Name="deleteButton"
                            Width="140"
                            Height="30"
                            Margin="10,0,0,0"
                            Click="DeleteStudent"
                            Content="Удалить" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
