<Window
    x:Class="Homework__2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Homework__2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid Background="#FFE8E8E8">
            <TextBox
                x:Name="text"
                Width="200"
                Height="35"
                Margin="0,0,0,180"
                VerticalContentAlignment="Center"
                FontSize="14" />
            <Button
                Name="Add"
                Width="100"
                Height="35"
                Margin="0,0,100,300"
                BorderThickness="0"
                Click="Add_Click"
                Content="Add"
                Cursor="Hand"
                FontWeight="Bold"
                Foreground="White">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#FF2196F3" />
                        <GradientStop Offset="1" Color="#FF1976D2" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button
                Name="Remove"
                Width="100"
                Height="35"
                Margin="100,0,0,300"
                BorderThickness="0"
                Click="Remove_Click"
                Content="Remove"
                Cursor="Hand"
                FontWeight="Bold"
                Foreground="White">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#FFE53935" />
                        <GradientStop Offset="1" Color="#FFC62828" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <ListBox
                Name="list"
                Width="250"
                Height="150"
                Margin="0,200,0,0"
                Background="White"
                BorderBrush="#FF888888"
                BorderThickness="1"
                FontSize="14">
                <ListBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </ListBox.Resources>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                            Padding="5"
                            Foreground="#333"
                            Text="{Binding}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</Window>
