<Window
    x:Class="Homework_3._2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Homework_3._2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid Background="#FFF5F5F5">
            <Border
                Margin="20"
                Padding="15"
                Background="White"
                BorderBrush="#FFE0E0E0"
                BorderThickness="1"
                CornerRadius="8">

                <StackPanel>
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="#FF333333"
                        Text="1. Какой оператор нельзя перегружать в C#?"
                        TextWrapping="Wrap" />

                    <StackPanel Margin="0,15,0,0">
                        <RadioButton Name="q1Option1" Content="+=" />
                        <RadioButton
                            Margin="0,8,0,0"
                            Content="+"
                            GroupName="Question1" />
                        <RadioButton
                            Margin="0,8,0,0"
                            Content="=="
                            GroupName="Question1" />
                    </StackPanel>

                    <Button
                        Margin="0,25,0,0"
                        Click="Button_Click"
                        Content="Далее" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
