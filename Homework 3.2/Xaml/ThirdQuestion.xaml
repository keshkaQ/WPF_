<Window
    x:Class="Homework_3._2.Xaml.ThirdQuestion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Homework_3._2.Xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ThirdQuestion"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock
                Margin="0,0,0,10"
                FontWeight="Bold"
                Text="3.Сколько поколений у сборщик мусора?" />
            <StackPanel>
                <RadioButton
                    x:Name="q3Option1"
                    Margin="0,5,0,5"
                    Content="1" />
                <RadioButton
                    x:Name="q3Option2"
                    Margin="0,5,0,5"
                    Content="2" />
                <RadioButton
                    x:Name="q3Option3"
                    Margin="0,5,0,5"
                    Content="3" />
            </StackPanel>
            <Button
                Margin="0,20,0,0"
                Click="Button_Click"
                Content="Завершить тест" />
        </StackPanel>
    </Grid>
</Window>
