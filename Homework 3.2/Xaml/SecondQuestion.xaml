<Window
    x:Class="Homework_3._2.Xaml.SecondQuestion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Homework_3._2.Xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SecondQuestion"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock
                Margin="0,0,0,10"
                FontWeight="Bold"
                Text="2. Какие типы являются значимыми?" />
            <StackPanel>
                <CheckBox
                    x:Name="q2Option1"
                    Margin="0,5,0,5"
                    Content="enum" />
                <CheckBox
                    x:Name="q2Option2"
                    Margin="0,5,0,5"
                    Content="int" />
                <CheckBox
                    x:Name="q2Option3"
                    Margin="0,5,0,5"
                    Content="class" />
            </StackPanel>

            <Button
                Margin="0,20,0,0"
                Click="Button_Click"
                Content="Далее" />
        </StackPanel>
    </Grid>
</Window>
