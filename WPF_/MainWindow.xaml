<Window
    x:Class="WPF_.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <TextBlock
            TextAlignment="Center"
            Name="Title"
            Width="280"
            Height="30"
            Margin="0 0 0 300"
            Text="Калькулятор сложения"
            FontSize="24"
            />
        <TextBlock
            TextAlignment="Center"
            Name="result"
            Width="140"
            Height="30"
            Margin="0,0,0,180"
            FontSize="15"/>
        <TextBox
            Name="x"
            Width="140"
            Height="30"
            Margin="0,0,0,90" />
        <TextBox
            Name="y"
            Width="140"
            Height="30" />
        <Button
            Width="140"
            Height="30"
            Margin="0,90,0,0"
            Click="Button_Click"
            Content="Сложить" />
    </Grid>
</Window>
